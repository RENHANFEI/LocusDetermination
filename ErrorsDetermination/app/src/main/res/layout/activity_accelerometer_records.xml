<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.example.renhanfei.mylocationmap.AccelerometerRecordsActivity">

    <ListView
        android:id="@+id/records_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9" />


    <Button
        android:id="@+id/analysis_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick_analysis"
        android:text="@string/analysis_result" />


    <Button
        android:id="@+id/delete_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick_deleteAllRecords"
        android:text="@string/delete_all" />

</LinearLayout>
